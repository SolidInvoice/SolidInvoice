{% extends "@SolidInvoiceCore/Layout/default.html.twig" %}

{% block title %}
    {% if invoice is defined %}
        {{ 'invoice.title'|trans({'%id%' : invoice.invoiceId}) }}
    {% else %}
        {{ (recurring ? "invoice.action.create_recurring" : "invoice.action.create")|trans }}
    {% endif %}
{% endblock %}

{% block content %}
    <twig:CreateInvoice :form="form" :invoice="invoice" />
{% endblock content %}

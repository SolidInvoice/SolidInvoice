{% extends "@SolidInvoiceCore/Layout/Email/notification.html.twig" %}

{%- block title -%}
    {{ 'invoice.status_change.heading'|trans({}, 'email') }}
{%- endblock -%}

{%- block content -%}
    {% apply inky_to_html %}
        <row>
            <columns><strong>{{ 'invoice.status_change.id'|trans({}, 'email') }}</strong></columns>
            <columns><a href="{{ url('_invoices_view', {'id' : invoice.id}) }}">{{ invoice.invoiceId ?? invoice.id }}</a></columns>
        </row>
        <row>
            <columns><strong>{{ 'invoice.status_change.new_status'|trans({}, 'email') }}</strong></columns>
            <columns>{{ invoice_label(invoice.status) }}</columns>
        </row>

        <center data-parsed="">
            <table class="button success float-center">
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <a href="{{ url('_invoices_view', {'id' : invoice.id}) }}">{{ 'invoice.status_change.view_invoice'|trans({}, 'email') }}</a>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </center>
    {% endapply %}
{%- endblock -%}

{% extends "SolidInvoiceCoreBundle:Layout/Email:notification.html.twig" %}

{% block title %}
    {{ 'invoice.status_change.heading'|trans({}, 'email') }}
{% endblock %}

{% block content %}
    <table class="table table-striped">
        <tr>
            <th>
                {{ 'invoice.status_change.id'|trans({}, 'email') }}
            </th>
            <td>
                <a href="{{ url('_invoices_view', {'id' : invoice.id}) }}">
                    {{ invoice.id }}
                </a>
            </td>
        </tr>
        <tr>
            <th>
                {{ 'invoice.status_change.status'|trans({}, 'email') }}
            </th>
            <td>
                {{ invoice_label(invoice.status) }}
            </td>
        </tr>
    </table>
{% endblock %}

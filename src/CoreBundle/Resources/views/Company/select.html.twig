{% extends "@SolidInvoiceCore/Layout/default_no_nav.html.twig" %}

{% block title %}Select Company{% endblock title %}

{% block content %}

    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card">
                <div class="card-header with-border">
                    <h3 class="card-title" id="install-title">
                        Choose Company
                    </h3>
                </div>
                <div class="card-body">
                    {% for company in companies %}
                        <a href="{{ path('_switch_company', {'id': company.id}) }}">{{ company }}</a>
                        <br />
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

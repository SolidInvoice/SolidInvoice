{% set locale = app.request.locale|split('_')[0] %}

<!DOCTYPE html>
<html class="no-js" lang="{{ locale }}">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{{ block('page_title') is defined  ? block('page_title') : (block('title') is defined ? block('title')) }}</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    <link rel="icon" type="image/x-icon" href="{{ asset('/favicon.ico') }}" />
    <link rel="shortcut icon" type="image/png" href="{{ asset('/favicon.ico') }}"/>
    <meta name="theme-color" content="#1E88E7">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock stylesheets %}

    {% include '@SolidInvoiceCore/_partials/scripts.html.twig' %}

</head>
<body class="{{ setting('design/system/theme')|default('skin-solidinvoice-default') }} sidebar-mini hold-transition {{ body_class|default('') }}">
    <div class="wrapper">
        {{ block('body_top') is defined ? block('body_top') }}
        <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            {{ block('header') is defined ? block('header') }}
        </nav>

        <div class="content-wrapper">
            {{ block('body') is defined ? block('body') }}
        </div>

        <footer class="main-footer">
            {{ block('footer') is defined ? block('footer') }}
        </footer>

        {% if module is defined %}
            {{ encore_entry_script_tags(module) }}
        {% else %}
            {{ encore_entry_script_tags('core') }}
        {% endif %}

        {{ block('scripts') is defined ? block('scripts') }}

        {{ block('body_bottom') is defined ? block('body_bottom') }}
    </div>
</body>
</html>


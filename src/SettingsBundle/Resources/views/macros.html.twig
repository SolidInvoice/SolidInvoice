{% macro settings_section(section, settings, form) %}
    <div class="card mb-3">
        <div class="card-header">
            <h3 class="card-title">
                {{ section|replace({"_" : " "})|title }}
            </h3>
        </div>
        <div class="card-body">
            {{ form_widget(form[section]) }}
        </div>
    </div>
{% endmacro %}

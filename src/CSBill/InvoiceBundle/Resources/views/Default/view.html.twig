{% extends "CSBillCoreBundle:Layout:one_column_left.html.twig" %}

{% block page_title %}{{ "Invoice #%id"|trans|replace({"%id" : invoice.id}) }}{% endblock page_title %}
{% block title %}{{ block('page_title') }} <small>{{ status_label(invoice.status) }}</small>{% endblock %}

{% block sidebar %}
    {{ menu('invoices_view') }}
{% endblock sidebar %}

{% block content %}

    {# TODO : add toolbar #}
    <div class="pull-right">
        <div class="btn-toolbar">
            <div class="btn-group">
                {% if invoice is not paid %}
                    <a href="{{ path('_pay_invoice', {'id' : invoice.id}) }}" class="btn btn-success">{{ "Mark Paid"|trans }}</a>
                {% endif %}
                <a href="{{ path('_send_invoice', {'id' : invoice.id}) }}" class="btn btn-info">{{ "Send"|trans }}</a>
            </div>

            {% if invoice is draft or invoice is pending %}
                <div class="btn-group">
                    {% if invoice is pending %}
                        <a href="{{ path('_payments_create', {'uuid' : invoice.uuid}) }}" class="btn btn-primary">{{ "pay_now"|trans }}</a>
                    {% endif %}
                    <a href="{{ path('_cancel_invoice', {'id' : invoice.id}) }}" class="btn btn-inverse">{{ "Cancel"|trans }}</a>
                </div>
            {% endif %}

            {% if invoice is not paid %}
                <div class="btn-group">
                    <a href="{{ path('_invoices_edit', {'id' : invoice.id}) }}" class="btn btn-default">{{ "Edit"|trans }}</a>
                </div>
            {% endif %}
        </div>
    </div>

    {% include "CSBillInvoiceBundle::invoice_template.html.twig" with {"link_client" : true} %}

    {% spaceless %}
    <div class="col-md-10">
        <hr />
        <h3>{{ 'payments'|trans }}</h3>
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>{{ 'payment_id'|trans }}</th>
                    <th>{{ 'method'|trans }}</th>
                    <th>{{ 'amount'|trans }}</th>
                    <th>{{ 'currency'|trans }}</th>
                    <th>{{ 'payment_date'|trans }}</th>
                    <th>{{ 'status'|trans }}</th>
                </tr>
            </thead>
            {% for payment in payments %}
                <tr>
                    <td>
                        {{ payment.id }}
                    </td>
                    <td>
                        {{ payment.method }}
                    </td>
                    <td>
                        {{ payment.amount|currency }}
                    </td>
                    <td>
                        {{ payment.currency }}
                    </td>
                    <td>
                        {{ payment.created|date }}
                    </td>
                    <td>
                        {{ status_label(payment, payment.message) }}
                    </td>
                </tr>
            {% endfor %}
        </table>
        {% endspaceless %}
    </div>
{% endblock content %}

<div class="control-group">

	<div class="row-fluid">
		<div class="span4">
			<div class="control-group">
				<label for="database_driver">{{ "Database Driver"|trans }}</label>
				{#<select name="database_driver" id="database_driver">
					<option value="">{{ "-choose-"|trans }}</option>
					{% for driver in step.drivers %}
						<option value="pdo_{{ driver }}"{% if step.params.database_driver is sameas(driver) %} selected {% endif %}>{{ driver }}</option>
					{% endfor %}
				</select>#}
				{{ "MySQL is the only supported database at this time"|trans }}
				<input type="hidden" name="database_driver" value="pdo_mysql" />
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<label for="database_host">{{ "Host"|trans }}</label>
				<input name="database_host" id="database_host" type="text" value="{{ step.params.database_host }}" />
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span4">
			<div class="control-group">
				<label for="database_user">{{ "User"|trans }}</label>
				<input name="database_user" id="database_user" type="text"  value="{{ step.params.database_user }}" />
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<label for="database_password">{{ "Password"|trans }}</label>
				<input name="database_password" id="database_password" type="password" />
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span4">
			<div class="control-group">
				<label for="database_name">{{ "Database Name"|trans }}</label>
				<input name="database_name" id="database_name" type="text"  value="{{ step.params.database_name }}" />
			</div>
		</div>
		<div class="span4">
			<div class="control-group">
				<label for="database_port">{{ "Database Port"|trans }}</label>
				<input name="database_port" id="database_port" type="text"  value="{{ step.params.database_port }}" />
			</div>
		</div>
	</div>
</div>

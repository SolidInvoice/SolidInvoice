{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "paths": {
      "~/*": [
        "./assets/js/*"
      ]
    },
    "types": [
      "webpack-env",
    ]
  },
  "include": [
      "assets/js/**/*.js",
      "assets/js/**/*.ts",
      "assets/js/**/*.vue"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "node_modules",
    "vendor/symfony/ux-vue/Resources/assets"
  ]
}
